<!DOCTYPE html>
<html>
  <head>
    <title>Admin - Game-Review-Hub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

<body>
  <% if admin_signed_in? %>
    <nav class="navbar navbar-dark bg-dark mb-4">
      <span class="navbar-brand">Admin Dashboard</span>

      <ul class="navbar-nav flex-row ml-auto">
        <li class="nav-item mr-3">
          <%= link_to "Dashboard", admin_dashboards_path, class: "nav-link text-white" %>
        </li>
        <li class="nav-item mr-3">
          <%= link_to "Users", admin_users_path, class: "nav-link text-white" %>
        </li>
        <li class="nav-item mr-3">
          <%= link_to "Posts", admin_posts_path, class: "nav-link text-white" %>
        </li>
        <li class="nav-item">
          <%= link_to "Logout", destroy_admin_session_path, method: :delete, class: "nav-link text-white" %>
        </li>
      </ul>
    </nav>
  <% end %>

  <div class="container">
    <%= yield %>
  </div>
</body>
</html>