<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @posts.each do |post| %>
  <div>
    <p>タイトル：<%= link_to post.review_title, post_path(post.id) %></p>
    <p>ゲームタイトル：<%= post.game_title %></p>
    <p>本文：<%= post.body %></p>
    <p>投稿ユーザー画像：<%= image_tag post.user.get_profile_image(100,100) %></p>
    <p>ユーザーネーム：<%= post.user.name %></p>
  </div>
<% end %>
