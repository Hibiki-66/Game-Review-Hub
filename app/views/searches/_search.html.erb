<% if user_signed_in? %>
  <%= form_with url: search_path, local: true, method: :get, class: "d-flex justify-content-center my-4" do |f| %>

    <div class="input-group" style="max-width: 900px;">
      <%= f.text_field :word, class: "form-control", placeholder: "キーワード" %>

      <%= f.select :range, options_for_select([['User'], ['Game']]), {}, class: "form-select" %>

      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backward_match"], ["部分一致","partial_match"]]), {}, class: "form-select" %>

      <%= f.submit "検索", class: "btn btn-primary" %>
    </div>

  <% end %>
<% end %>