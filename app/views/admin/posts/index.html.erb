
<h2>投稿一覧</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>投稿者</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.review_title %></td>
        <td><%= post.user.name %></td>
        <td>
          <%= link_to "詳細", admin_post_path(post), class: "btn btn-sm btn-outline-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>