<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <!-- 投稿詳細 -->
      <div class="card shadow-sm mb-4">
        <div class="card-body">

          <h3 class="card-title mb-3">
            <%= @post.review_title %>
          </h3>

          <p class="text-muted mb-2">
            ゲームタイトル：<%= @post.game_title %>
          </p>

          <%= render "output_star", post: @post %>

          <p class="mb-3">
            <%= @post.body %>
          </p>

          <div class="d-flex align-items-center mb-3">
            <%= image_tag @post.user.get_profile_image(40,40), class: "rounded-circle mr-2" %>
            <strong><%= @post.user.name %></strong>
            <small class="text-muted ml-2">
              <%= @post.created_at.strftime('%Y/%m/%d') %>
            </small>
          </div>

          <div class="mb-3">
            <span class="mr-3">
              コメント数：<%= @post.post_comments.count %>
            </span>
            <%= render "public/favorites/btn", post: @post %>
          </div>

          <% if @post.user == current_user %>
            <div class="mt-3">
              <%= link_to "編集", edit_post_path(@post), class: "btn btn-outline-primary btn-sm mr-2" %>

              <%= link_to "削除", post_path(@post), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-outline-danger btn-sm" %>
            </div>
          <% end %>

        </div>
      </div>

      <!-- コメント一覧 -->
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="mb-3">コメント</h5>
          <%= render "public/post_comments/index", post: @post %>
        </div>
      </div>

      <!-- コメント投稿フォーム -->
      <div class="card">
        <div class="card-body">
          <h5 class="mb-3">コメントを書く</h5>
          <%= render "public/post_comments/form", post: @post, post_comment: @post_comment %>
        </div>
      </div>

    </div>
  </div>
</div>
