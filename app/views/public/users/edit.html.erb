<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

      <h2 class="text-center mb-4">プロフィール編集</h2>

      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <%= @user.errors.count %>件のエラーが発生しました
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, local: true do |f| %>

        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, autofocus: true, class: "form-control", id: "inputName", placeholder: "名前" %>
        </div>

        <div class="form-group">
          <%= f.label :profile_image, "Profile Image" %>
          <%= f.file_field :profile_image, class: "form-control-file", accept: "image/*", id: "inputImage" %>
        </div>

        <div class="text-center">
          <%= f.submit "変更を保存", class: "btn btn-primary px-5" %>
        </div>

      <% end %>

    </div>
  </div>
</div>